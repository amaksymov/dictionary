<table class="table">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Word</th>
    <th scope="col">Translate</th>
  </tr>
  </thead>
  <tbody>
  {% for word, translates in dictionary %}
    <tr>
      <th scope="row">
        <a class="" href="{{ url_for('word:detail', word_id=word.id) }}">{{ word.id }}</a>
      </th>
      <td>{{ word.value }}</td>
      <td>
        {% for k, v in translates.items() %}
          {% if v %}
            <b>
              {{ k.value }}:
            </b>
            {{ ', '.join(v) }}
            <br>
          {% endif %}
        {% endfor %}
      </td>
    </tr>
  {% else %}
    <tr>
      <th scope="row">1</th>
      <td>null</td>
      <td>null</td>
    </tr>
  {% endfor %}
  </tbody>
</table>
