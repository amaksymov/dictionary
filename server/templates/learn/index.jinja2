{% extends "base.jinja2" %}
{% block title %}Welcome!{% endblock %}
{% block head %}
  {{ super() }}
{% endblock %}
{% block content %}
  <div class="d-flex justify-content-center">
    <div class="d-flex flex-column bd-highlight mb-3">
      {% if word %}
        <div style="margin: 1em">
          <h4>{{ word.value }}</h4>
        </div>
        {% include 'learn/modal.jinja2' %}
      {% else %}
        <p>Add words for start learning</p>
        <a href="{{ url_for('index') }}" class="btn btn-outline-primary">Add</a>
      {% endif %}
    </div>
  </div>
{% endblock %}
